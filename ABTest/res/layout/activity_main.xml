<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.example.abtest"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.example.abtest.ABListView
        android:id="@+id/activity_layout_lvListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" > 
    </com.example.abtest.ABListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.example.abtest.ABButton
            android:id="@+id/activity_layout_btBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/activity_layout_btBack"
            app:dirrection="right_to_left" />

        <com.example.abtest.ABButton
            android:id="@+id/activity_layout_btSupport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/activity_layout_btSupport" />

        <com.example.abtest.ABButton
            android:id="@+id/activity_layout_btPay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/activity_layout_btPay" />
    </LinearLayout>

</LinearLayout>